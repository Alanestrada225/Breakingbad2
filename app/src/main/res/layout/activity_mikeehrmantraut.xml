<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.detail.DelaitActivity"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mike"


            />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:letterSpacing=".12"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="10dp"
            android:text="MICHAEL EHRMANTRAUT"
            />
        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:padding="10dp"
            android:textColor="@color/orange"
            android:text="MIKE"

            />
        <LinearLayout
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Status: is dead"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/purple_200"
                android:textColorHint="@color/black"/>

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Birthday: in 31-01-1947"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColorHint="@color/black"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:hint="Occupation: Police(in Philadelphia)Toll collector"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="italic"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Performed by: Jonathan Ray Banks"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColorHint="@color/black"

            />

    </LinearLayout>
</layout>